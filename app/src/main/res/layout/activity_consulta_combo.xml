<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_consulta_combo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultarComboActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciones un Opcion"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginBottom="17dp"        />
    <Spinner
        android:id="@+id/comboPersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documento"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textviewDoc"
            android:text="..." />

        <TextView
            android:id="@+id/textviewNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewDoc"
            android:text="Nombre:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textviewNom"
            android:layout_toEndOf="@+id/textviewNom"
            android:text="..." />

        <TextView
            android:id="@+id/textviewTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/textviewNom"
            android:text="Telefono:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textviewTel"
            android:layout_toEndOf="@id/textviewTel"

            android:text="..." />

    </RelativeLayout>

</LinearLayout>